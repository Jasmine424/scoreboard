  	<!-- Name  -->
	<div class="container spaced">
      <div class="row-fluid">
            <span class="span12">
      
      <!-- Pass along message if there is one --> 
      <h1 class="title">ADMIN PANEL</h1>
			<br/><br/>
      <% if @active %>
			<p class="instruction">Competition is Active</p>
			<br/>
        	<a href="/admin/disable" class="btn btn-1" style="background-color:#ff7f00;">CLICK TO STOP COMPETITION</a>
			<% else %>
			<p class="instruction">Competition is Not Active</p>
			<br/>
        	<a href="/admin/start" class="btn btn-1" style="background-color:#29A34B;">CLICK TO ENABLE COMPETITION</a>
        	<% end %>
			</span>
	  </div>
    </div>
	
	<div class="container-fluid container-fluid-3 padded" >
      <div class="row-fluid row-fluid-1"> 
            <h1>Progression</h1>
			<table class="table table-striped table-condensed">
              <thead>
                <tr>
                  <th>Question</th>
                  <th>Correct Answers</th>
                  <th>Percentage of Class Answered Correct</th>
                </tr>
              </thead>
              <tbody>
              <% @answered.to_a.each do |question,count| %>
                <tr>
                  <td width="20%" height="20"><%= question %></td>
                  <td width="20%"><%= count.to_s %></td>
                  <td width="40%">
                    <div class="progress progress-danger progress-striped active" style="margin:0px;">
                      <div class="bar" style="width:<%= ((count.to_f / @total.to_f)*100).floor.to_s %>%;"></div>
                    </div>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
	  	</div>
    </div>

	<div class="container-fluid container-fluid-3 padded" >
      <div class="row-fluid row-fluid-1"> 
            <h1>Scoreboard</h1>
			<table class="table table-striped table-condensed">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Score</th>
                  <th>Progress</th>
                </tr>
              </thead>
              <tbody>
              <% @competitors.each do |student| %>
                <tr>
                  <td width="30%" height="20"><%= student.name %></td>
                  <td width="10%"><%= student.score.to_s %></td>
                  <td width="40%">
                    <div class="progress progress-<%= 
                      case student.score
                        when 0..25
                          "danger"
                        when 25..50
                          "warning"
                        when 50..75
                          "info"
                        else
                          "success"
                        end %> progress-striped active" style="margin:0px;">
                      <div class="bar" style="width:<%= student.score.to_s %>%;"></div>
                    </div>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
